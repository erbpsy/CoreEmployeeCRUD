@page
@model WebApplication1.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete Employee";
    string photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "noimage.jpg");
}



<h1>Employee Details: </h1>
<form method="post">
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h3>
                        @Model.Employee.Name
                    </h3>
                </div>
                <div class="card-body text-center">
                    <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                    <h4>EmployeeId: @Model.Employee.Id</h4>
                    <h4>Department: @Model.Employee.Department</h4>
                    <h4>Gender: @Model.Employee.Sex</h4>
                    <h4>Email: @Model.Employee.Email</h4>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="/Employees/Index" class="btn btn-primary m-1 emp-action">Cancel</a>
                    <button class="btn btn-danger m-1 emp-action" type="submit" title="Delete">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>


