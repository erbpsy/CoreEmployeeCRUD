@page
@model WebApplication1.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Details";
    string photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "noimage.jpg");
}

<h1>Employee Details: </h1>
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3>
                    @Model.Employee.Name
                </h3>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                <h4>EmployeeId: @Model.Employee.Id</h4>
                <h4>Department: @Model.Employee.Department</h4>
                <h4>Gender: @Model.Employee.Sex</h4>
                <h4>Email: @Model.Employee.Email</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-page="/Employees/Index" class="btn btn-primary m-1 emp-action">Back</a>
                <a asp-page="/Employees/Edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary m-1 emp-action">Edit</a>
                <a asp-page="/Employees/Delete" asp-route-id="@Model.Employee.Id" class="btn btn-danger m-1 emp-action">Delete</a>
            </div>
        </div>
    </div>
</div>

