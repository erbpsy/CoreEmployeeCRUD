@page
@model WebApplication1.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees List";
}

<h1>Employees List : @Model.Employees.Count()</h1>

<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        string photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
        <div class="card m-3" style="min-width:18rem;max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-id="@employee.Id" class="btn btn-primary m-1 emp-action">View</a>
                <a asp-page="/Employees/Edit" asp-route-id="@employee.Id" class="btn btn-primary m-1 emp-action">Edit</a>
                <a asp-page="/Employees/Delete" asp-route-id="@employee.Id" class="btn btn-danger m-1 emp-action">Delete</a>
            </div>
        </div>
    }
</div>